<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<%= render 'shared/stats' %>

<%= render'follow_form' if logged_in? %>

<% if current_user?(@user) %>
    <div class="center">
    <%= link_to "本を投稿する", new_post_path, class: "btn btn-lg btn-primary" %>
    </div>
<% end %>

<div class="container ">
  <div class="row">
      <% @user.posts.each do |post| %>
      <div class="center col-md-4 col-sm-6 col-xs-12">
          <%= link_to("/posts/#{post.id}") do %>
          <div class="main-contents">
              <div class="book-image">
                  <img src="http://images-jp.amazon.com/images/P/<%= post[:isbn_code] %>.09.LZZZZZZZ">
              </div>
              <div class="content-wrapper">
                  <div class="book-title">
                      <p><%= link_to(post.title,"/posts/#{post.id}") %></p>
                  </div>
                  <div class="main-message">
                      <%= post[:review] %>
                  </div>
              </div>
          </div>
          <% end %>
      </div>
      <% end %>
  </div>
</div>