<div class="center jumbotron">
  <h1>Book Review Shelf</h1>

  <h2>
    本の読みっぱなし、しちゃっていませんか？
  </h2>

  <% if logged_in? %>  
    <%= link_to "本を投稿する", new_post_path, class: "btn btn-lg btn-primary" %>
  <%else%>
    <%= link_to "新規登録はこちら！", signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
  
</div>

<div class="container">
    <div class="row">
        <% @posts.each do |post| %>
        <div class="col-md-4 col-sm-6 col-xs-12">
            <%= link_to("/posts/#{post.id}") do %>
            <div class="main-contents">
                <div class="main-image">
                    <img src="http://images-jp.amazon.com/images/P/<%= post[:isbn_code] %>.09.LZZZZZZZ">
                </div>
                <div class="content-wrapper">
                    <div clasdddddds="book-title">
                        <p><%= link_to(post.title,"/posts/#{post.id}") %></p>
                    </div>
                    <div class="main-message">
                        <%= post[:review] %>
                    </div>

                    
                    <div class="right-container">
                        <div class="main-user"><%= post.user.name %></div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
        <% end %>
    </div>
</div>



